<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Tickinator.UI.Wpf.Resources"
                    xmlns:system="clr-namespace:System;assembly=mscorlib"
                    xmlns:userControls="clr-namespace:Tickinator.UI.Wpf.UserControls">
    <Style TargetType="{x:Type userControls:DashboardBase}" x:Key="DashboardBaseStyle">
        <Setter Property="Template" Value="{DynamicResource DashboardTemplate}" />
    </Style>
    <Style TargetType="{x:Type userControls:MyDashboard}" BasedOn="{StaticResource DashboardBaseStyle}"/>
    <Style TargetType="{x:Type userControls:TeamDashboard}" BasedOn="{StaticResource DashboardBaseStyle}"/>
</ResourceDictionary>